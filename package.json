{
  "name": "distributed-sys-viz",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build-js": "browserify src/index.ts -p [tsify] | uglifyjs -c > dist/bundle.js",
    "build-css": "concat node_modules/material-design-lite/material.min.css styles.css > dist/bundle.css",
    "build-html": "copyfiles index.html dist",
    "build": "npm run clean && npm run build-js && npm run build-css && npm run build-html",
    "watch": "nodemon -e ts,css,html -x npm run build",
    "serve": "serve dist",
    "serve-watch": "concurrently \"npm run serve\" \"npm run watch\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "d3": "^7.9.0",
    "material-design-lite": "^1.3.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "browserify": "^17.0.1",
    "concat": "^1.0.3",
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.7",
    "serve": "^14.2.4",
    "tsify": "^5.0.4",
    "typescript": "^5.7.2",
    "uglify-js": "^3.19.3",
    "watchify": "^4.0.0"
  }
}
